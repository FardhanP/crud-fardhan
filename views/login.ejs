<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-center  ">
                    <div class="col-lg-5">
                        <div class="card  bg-transparent border-0 rounded-lg mt-5">
                            <div class=" text-center justify-center">
                                <img class="items-center flex justify-center mx-auto" src="img/logosmk.png" alt="Logo" style="height: 100px; width: 100px; margin-right: 20px;">
                                <h1 class="font-bold text-5xl text-white">Login.</h1>
                            </div>
                            <div class="card-body">
                            
                                <form id="loginForm" action="/login" method="POST">
                                    <div class="form-group">
                                        <label class="font-semibold text-xl text-white mb-1" for="username">Username</label>
                                        <input class="form-control py-4" id="username" name="username" type="text" placeholder="Masukkan Username"/>
                                    </div>
                                    <div class="form-group font-semibold text-xl text-white">
                                        <label for="mb-1" for="password">Password</label>
                                        <input class="form-control py-4" id="password" name="password" type="password" placeholder="Masukkan Password"/>
                                    </div>
                                    <div class="form group d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <button type="submit" class="btn bg-black text-white w-100">Login</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>